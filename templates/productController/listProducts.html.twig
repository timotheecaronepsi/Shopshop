{% extends "base.html.twig" %}
{% block title %}{{ parent() }}Liste des produits{% endblock %}

{% block content %}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-12 col-md-10">
				<h1 class="text-center text-dark">Liste des produits</h1>
				<div class="table-responsive">
					<table class="table table-hover">
						<thead>
							<tr>
								<th width="60%" scope="col" class="text-white">Désignation</th>
								<th width="20%" scope="col" class="text-white">Prix</th>
								<th width="20%" scope="col" class="text-white">Type</th>
							</tr>
						</thead>
						<tbody>
							{% for p in products %}
								<tr class="{{ cycle(['table- primary','table-secondary'], loop.index0) }}">
									<td>{{ p.name }}</td>
									<td>{{ p.price }}€</td>
									<td>{{ p.type.label }}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
