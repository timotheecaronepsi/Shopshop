{% extends "base.html.twig" %}
{% block title %} {{ parent() }}Ajouter un produit{% endblock %}

{% block content %}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-12 col-md-6 align-items-center">
				<h1 class="text-center text-primary fw-bold m-2">Ajouter unproduit</h1>
				
                <form action="" method="post">
					<input type="text" id="name" name="name" class="form-control" placeholder="dÃ©signation" required>
					<textarea id="description" name="description" class="form-control" placeholder="description" cols="10" rows="10" required></textarea>
					<input type="number" id="price" name="price" class="form-control" placeholder="prix" step="0.1" required>
					<input type="number" id="stock" name="stock" class="form-control" placeholder="stock" required>
					
                    <select id="idType" name="idType" class="formcontrol" required>
						{% for t in types %}
							<option value="{{t.id}}">{{t.label}}</option>
						{% endfor %}
					</select>
					
                    <div class="text-center">
						<input type="submit" value="Ajouter" class="btn
						btn-primary m-2">
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
