{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Modifier un type {% endblock %}

{% block content %}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-12 col-md-6 align-items-center">
				<h1 class="text-center text-primary fw-bold m-2">Modifier un type</h1>
				<form method="POST">
 				<input type="hidden" value="{{type.id}}" name="id" class="form-control">
				<input type="text" value="{{type.label}}" name="label" class="form-control">
 					<div class="text-center">
 						<input type="submit" value="Modifier" class="btn btnprimary m-2">
 					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}